def miss():
    global score
    global hp
    global accurelease
    global accuracy
    global accurnumber
    global accuresult
    score-=100
    hp-=5
    accuracy = 20
    
    accurelease += accuracy
    accurnumber += 1
    accuresult = round(accurelease / accurnumber, 1)
    print(accuresult,'%')
    time.sleep(1)
    
    return 'Miss'
def reaction():
    global score
    global hp
    global accurelease
    global accuracy
    global accurnumber
    global accuresult
    
    accurelease += accuracy
    accurnumber += 1
    accuresult = round(accurelease / accurnumber, 1)
    
    if hp != 100:
        hp+=5
        
