import time
import random

inv = ['меч','кирка','яблоко']
print('[Рассказчик]: Вы идёте по лесу и вдруг видите монстра!')
time.sleep(0.5)
print('[Рассказчик]: Что вы будете делать?(Для выбора используете 1 или 2)')
time.sleep(0.5)
vibor = int(input('[Убежать] [Сражаться]'))
if vibor == 1:
    print('[Рассказчик]: Вы бежали со всех ног из-за чего вы проголодались.')
    vibor = int(input('[Съесть Яблоко] [Голодать]'))
    if vibor == 1:
        print('[Рассказчик]: Вы умерли от голода')
    if vibor == 2:
        print('[Рассказчик]: Вы съели яблоко')
        inv.remove('яблоко')

