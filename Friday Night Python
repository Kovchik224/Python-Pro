import pyautogui
import keyboard
import time
#if keyboard.is_pressed('d'):
#        if play[]
#🡨🡫🡩🡪
#🡸🡻🡹🡺

play = [['🡨','🡫','🡩','🡪'],
        ['🡸',' ',' ',' '],
        [' ','🡻',' ',' '],
        [' ',' ','🡹',' '],
        [' ',' ',' ','🡺'],
        [' ',' ','🡹',' '],
        [' ','🡻',' ',' '],
        ['🡸',' ',' ',' '],
        [' ','🡻',' ',' '],
        [' ','🡻',' ',' '],
        [' ',' ','🡹',' '],
        [' ',' ','🡹',' '],
        [' ',' ',' ','🡺'],
        [' ',' ',' ','🡺'],
        [' ',' ',' ',' '],
        ['⚐','⚐','⚐','⚐'],]

while True:
    for i in range(6):
        for j in range(len(play[i])):
            print(play[i][j], end=' ')
        print()
    for i in range(0,len(play)-1):
        for j in range(0,4):
            if play[i][j] == '🡨' or '🡫' or '🡩' or '🡪':
                play[i][j] = play[i+1][j]
                if j == '0':
                    play[i][1] = '🡫'
                    play[i][2] = '🡩'
                    play[i][3] = '🡪'
                if j == '1':
                    play[i][0] = '🡨'
                    play[i][2] = '🡩'
                    play[i][3] = '🡪'
                if j == '2':
                    play[i][1] = '🡫'
                    play[i][0] = '🡨'
                    play[i][3] = '🡪'
                if j == '3':
                    play[i][1] = '🡫'
                    play[i][2] = '🡩'
                    play[i][0] = '🡨'
            play[i+1][j] = ' '
    time.sleep(0.5)
